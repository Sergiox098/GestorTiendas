<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Título de Bienvenida -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Sergio"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Información de tienda -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStoreInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda: Minimercado Central"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSalesSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ventas hoy: $123.000"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvEarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganancias: $30.000"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botones principales como grid -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:rowCount="3"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardStoreInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Productos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Ventas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Empleados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Clientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Reportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Configuración"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"/>

    </androidx.gridlayout.widget.GridLayout>

    <!-- Navegación inferior (solo se ve en la actividad) -->
    <!-- Esto solo va en el layout de la Activity, no el fragmento -->

</androidx.constraintlayout.widget.ConstraintLayout>
